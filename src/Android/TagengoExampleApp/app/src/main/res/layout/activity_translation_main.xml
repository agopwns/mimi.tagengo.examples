<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TranslationMainActivity">

    <LinearLayout
        android:id="@+id/linearlayout_menubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorWhiteOpacity0"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="번역 메인"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_menubar">

        <Button
            android:id="@+id/button_from_language"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@color/colorWhiteOpacity0"
            android:scaleType="centerInside"
            android:text="한국어"
            android:textSize="16dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/button_change"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/colorWhiteOpacity0"
            android:scaleType="centerInside"
            android:src="@drawable/ic_swap_horiz_24px"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/button_to_language"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@color/colorWhiteOpacity0"
            android:scaleType="centerInside"
            android:text="일본어"
            android:textSize="16dp"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#F1F1F1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_language" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#F1F1F1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <!-- 하단바 : 음성, 대화, 이미지 번역 버튼 모음 -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="386dp"
        android:layout_height="628dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:ems="10"
        android:gravity="start|top"
        android:hint="번역할 내용을 입력해주세요..."
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_language" />

    <LinearLayout
        android:id="@+id/linearlayout_underbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_mic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/colorWhiteOpacity0"
                android:scaleType="centerInside"
                android:src="@drawable/ic_mic_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="음성"
                android:textSize="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_conversation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/colorWhiteOpacity0"
                android:scaleType="centerInside"
                android:src="@drawable/ic_chat"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="대화"
                android:textSize="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_camera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/colorWhiteOpacity0"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera_alt_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="카메라"
                android:textSize="12dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>